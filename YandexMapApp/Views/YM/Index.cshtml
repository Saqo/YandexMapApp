@{
    ViewBag.Title = "Index";
}
<script src="http://api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU" type="text/javascript"></script>
<div id="Map">
    <script type="text/javascript">
        // Как только будет загружен API и готов DOM, выполняем инициализацию
        ymaps.ready(init);

        var myMap
        function init() {
            // Создание экземпляра карты и его привязка к контейнеру с
            // заданным id ("map")
            myMap = new ymaps.Map('Map', {
                // При инициализации карты, обязательно нужно указать
                // ее центр и коэффициент масштабирования 
                center: [58.780237, 29.250743],
                zoom: 4
            });

            myMap.controls
            // Добавление кнопки изменения масштаба
                         .add('zoomControl')
            // Линейка масштаба
                        .add('mapTools');


            var MoscowMark = new ymaps.Placemark([55.751419, 37.617801], {
                iconContent: "Москва",
                balloonContentHeader: "Город-герой Москва",
                balloonContentBody: "<img src='/Images/Moscow.jpg';/>",
                balloonContentFooter: "Дата присвоения звания - 8 мая 1965 года"
