            }, { preset: 'twirl#redStretchyIcon' });


            myMap.geoObjects.add(Brest);
            myMap.geoObjects.add(MoscowMark);
            myMap.geoObjects.add(St_Petersburg);
            myMap.geoObjects.add(Murmansk);
            myMap.geoObjects.add(Smolensk);
            myMap.geoObjects.add(Tula);
            myMap.geoObjects.add(Novorossiysk);
            myMap.geoObjects.add(Volgograd);
            myMap.geoObjects.add(Odessa);
            myMap.geoObjects.add(Sevastopol);
            myMap.geoObjects.add(Kerch);
